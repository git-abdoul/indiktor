<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd" >
<log4j:configuration>
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{ABSOLUTE} %5p [%t] %l - %m%n" />			
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="levelMin" value="ERROR" />
		</filter>
	</appender>
	
	<!-- Ne journalise que les messages INFO Ã  ERROR  -->
	<appender name="rollingFile" class="org.apache.log4j.RollingFileAppender">
		<param name="file" value="logs/System_Agent.log" />
		<param name="maxFileSize" value="10MB" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{dd MMM yyyy HH:mm:ss} %-5p [%t] %c{2}: %m%n" />			
		</layout>
	</appender>
	
   	<logger name="com.fsi">
		<level value="DEBUG"/>
 	</logger>

	<root>
		<level value="ERROR"/>
		<appender-ref ref="rollingFile"/>
	</root>
</log4j:configuration>