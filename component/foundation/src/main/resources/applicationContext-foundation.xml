					<value>${jms.adminEventTopic}</value>
				</entry>
				<entry>
					<key><value>ADMIN_REQUEST</value></key>
					<value>${jms.adminRequestTopic}</value>
				</entry>
				<entry>
					<key><value>HEARTBEAT_CONNECTOR</value></key>
					<value>${jms.adminRequestTopic}.CONNECTOR</value>
				</entry>
				<entry>
					<key><value>HEARTBEAT_COLLECTOR</value></key>
					<value>${jms.adminRequestTopic}.COLLECTOR</value>
				</entry>
				<entry>
					<key><value>HEARTBEAT_JOB_TASK</value></key>
					<value>${jms.adminRequestTopic}.JOB_TASK</value>
				</entry>
			</map>
		</property>	
	</bean>	
