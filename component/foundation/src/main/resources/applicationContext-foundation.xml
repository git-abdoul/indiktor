	<bean id="jmsProcessorFactory"
    	  class="com.fsi.monitoring.jms.JmsProcessorFactory"
		  singleton="true"
		  init-method="initFactory">
		<property name="jmsConnection" ref="jmsConnectionFactory"/>
		<property name="jmsDestinations">
			<map>
				<entry>
					<key><value>ALERT</value></key>
					<value>${jms.alertTopic}</value>
				</entry>
				<entry>
					<key><value>IKR_VALUE</value></key>
					<value>${jms.ikrValueTopic}</value>
				</entry>
