	</ice:panelGroup>
	
	<ice:panelGrid columns="1" style="width: 470px;">
		<ice:panelGroup style="text-align: center; border: 1px solid #336699; height: 50px;">
			<ice:panelGrid columns="2">
				<ice:outputLabel value="Component Title:"/>
				<ice:inputText size="40" value="#{navigationBoardConfigBean.navigationBoard.title}" style="#{navigationBoardConfigBean.navigationTitleStyle}"/>
				<ice:outputLabel value="" rendered="#{navigationBoardConfigBean.errorNavigationBoardTitleVisible}"/>
				<ice:outputLabel value="Mandatory" style="color: red; font-size: 10px;"
	 							 rendered="#{navigationBoardConfigBean.errorNavigationBoardTitleVisible}"/>
				<ice:outputLabel value="" rendered="#{dashboardSelectMainConfigBean.titleAlreadyExists}"/>
				<ice:outputLabel value="Title already exists! Please, choose another title." style="color: red; font-size: 10px;"
	 							 rendered="#{dashboardSelectMainConfigBean.titleAlreadyExists}"/>
			</ice:panelGrid>
		</ice:panelGroup>
		
		<ice:panelGroup style="#{navigationBoardConfigBean.navigationPanelStyle}" rendered="#{navigationBoardConfigBean.listRenderer}">
			<ice:dataTable 	var="item"
	                   		value="#{navigationBoardConfigBean.navigationItems}"
	                   		columnWidths="125, 125, 125, 20"
	                   		scrollable="true"
	                   		scrollHeight="247">	
				<ice:column>													
					<f:facet name="header">
						<ice:outputText value="Environment" style="font-size: 12px; font-weight: bold"/>
					</f:facet>
					<ice:outputText value="#{item.navigationItem.env}" style="font-size: 10px"/>
				</ice:column>
               	<ice:column>
	                <f:facet name="header">
	                	<ice:outputText value="Type" style="font-size: 12px; font-weight: bold"/>
	                </f:facet>
	                <ice:outputText value="#{item.navigationItem.type}" style="font-size: 10px"/>
	            </ice:column>		
	            <ice:column>
	                <f:facet name="header">
	                	<ice:outputText value="Title" style="font-size: 12px; font-weight: bold"/>
	                </f:facet>
	                <ice:outputText value="#{item.navigationItem.title}" style="font-size: 10px"/>
	            </ice:column>
	            <ice:column style="text-align: center;">
	                <f:facet name="header">
	                	<ice:commandButton actionListener="#{navigationBoardConfigBean.removeAllDashboards}"
										   image="/images/IndiKtor2.0/Buttons/deleteSmall.png"
										   title="Remove all dashboards from the list"/>
	                </f:facet>
	                <ice:commandButton actionListener="#{navigationBoardConfigBean.removeDashboard}"
									   image="/images/IndiKtor2.0/Buttons/deleteSmall.png"
									   title="Remove this dashboard from the list">
						<f:attribute name="item" value="#{item}"/>
					</ice:commandButton>
	            </ice:column>	
	        </ice:dataTable>
	    </ice:panelGroup>
	    <ice:panelGroup style="#{navigationBoardConfigBean.navigationPanelStyle}" rendered="#{!navigationBoardConfigBean.listRenderer}">
	    	<ice:outputLabel value="No dashboards has been configured. Click on the "/>
