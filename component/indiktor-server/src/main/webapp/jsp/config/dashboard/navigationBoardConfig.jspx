			<ice:outputLabel value=" icon to add dashboards"/>
			<BR/><BR/>
			<ice:outputText value="Dashboard List cannot be empty"
						    rendered="#{navigationBoardConfigBean.errorDashboardListVisible}"
						    style="color: red;"/>
	    </ice:panelGroup>
	    
