<f:subview id="navigationBoardComponentConfig" 
		xmlns:h="http://java.sun.com/jsf/html"
 	    xmlns:ui="http://java.sun.com/jsf/facelets"
        xmlns:f="http://java.sun.com/jsf/core"
        xmlns:ice="http://www.icesoft.com/icefaces/component">
 
<ice:panelGrid columns="2" style="margin: 0px; padding: 0px; text-align: center;">
	<ice:panelGroup style="border: 1px solid #336699;" rendered="#{dashboardSelectMainConfigBean.addDashboardPanelVisible}">
		<ice:panelGrid columns="2">
			<ice:outputText style="padding-right: 300px;" value="Select an existing Dashboard"/>
			<ice:commandButton image="/images/i/cal_off.gif"
						   	   style="float: right;"
							   title="Close panel"
						       actionListener="#{dashboardSelectMainConfigBean.closeAddPanel}"/>
		</ice:panelGrid>
		<ice:panelGroup style="text-align: center;">
			<ice:dataTable 	var="dashboard"
	                   		value="#{navigationBoardConfigBean.dashboards}"
	                   		columnWidths="20, 125, 125, 125"
	                   		scrollable="true"
	                   		scrollHeight="283"
                      		sortColumn="#{navigationBoardConfigBean.columnName}"	
						    sortAscending="#{navigationBoardConfigBean.ascending}">	
				<ice:column style="text-align: center;">													
					<f:facet name="header">
						<ice:commandButton actionListener="#{navigationBoardConfigBean.addAllDashboards}"
										   image="/images/IndiKtor2.0/Buttons/addSmall.png"
										   title="Add all dashboards to the list"/>
					</f:facet>
					<ice:commandButton actionListener="#{navigationBoardConfigBean.addDashboard}"
									   image="/images/IndiKtor2.0/Buttons/addSmall.png"
									   title="Add this dashboard to the list">
						<f:attribute name="dashboard" value="#{dashboard}"/>
					</ice:commandButton>
				</ice:column>
	               <ice:column>
	                <f:facet name="header">
	                	<ice:commandSortHeader columnName="#{navigationBoardConfigBean.envColumnName}" arrow="true" >
	                    	<ice:outputText value="#{navigationBoardConfigBean.envColumnName}"/>
	                    </ice:commandSortHeader>
	                </f:facet>
	                <ice:outputText style="text-align: left;" value="#{dashboard.env}"/>
	            </ice:column>		
	            <ice:column>
	                <f:facet name="header">
	                	<ice:commandSortHeader columnName="#{navigationBoardConfigBean.typeColumnName}" arrow="true" >
	                    	<ice:outputText value="#{navigationBoardConfigBean.typeColumnName}"/>
	                    </ice:commandSortHeader>
	                </f:facet>
	                <ice:outputText style="text-align: left;" value="#{dashboard.type}"/>
	            </ice:column>
	            <ice:column>
	                <f:facet name="header">
	                	<ice:commandSortHeader columnName="#{navigationBoardConfigBean.titleColumnName}" arrow="true" >
	                    	<ice:outputText value="#{navigationBoardConfigBean.titleColumnName}"/>
	                    </ice:commandSortHeader>
	                </f:facet>
	                <ice:outputText style="text-align: left;" value="#{dashboard.title}"/>
	            </ice:column>	
	        </ice:dataTable>
	    </ice:panelGroup>
        
